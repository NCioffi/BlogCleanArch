@page "/postform"
@page "/postform/{Id:int}"
<h3>PostForm</h3>

@using System.Net.Http
@using System.Net.Http.Json
@using Blazor.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<EditForm Model="@post">
    <div class="container-fluid">
        <div class="form-group row mb-1">
            <label class="col-sm-3">ID de Usuario  </label>
            <div class="col-sm-9">
                <InputNumber class="form-control" @bind-Value="@post.IdUsuario"></InputNumber>
            </div>
            <label class="col-sm-3">Detalle  </label>
            <div class="col-sm-9">
                <InputText class="form-control" @bind-Value="@post.Descripcion"></InputText>
            </div>
        </div>
        <div class="form-group row mb-1">
            <div class="col-sm-12">
                <button class="btn btn-primary" @onclick="Save">Guardar</button>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }
    Post post = new Post();
    Response<Post> respuesta = new Response<Post>();
    private async Task Save()
    {
        if (Id != 0) // Es edit
        {

            var response = await Http.PutAsJsonAsync<Post>("/post", post);

            var _response = response.Content.ReadFromJsonAsync<Post>();

        }
        else // Nuevo registro
        {
            var response = await Http.PostAsJsonAsync<Post>("/post", post);

            var _response = response.Content.ReadFromJsonAsync<Post>();
        }



        NavigationManager.NavigateTo("/posts");

    }
    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {

            respuesta = await Http.GetFromJsonAsync<Models.Response<Post>>("/post/" + Id);
            post = respuesta.Data;
        }
    }




}
